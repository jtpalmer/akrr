FROM nsimakov/centos_slurm_single_host_wlm:1

LABEL description="centos for akrr tests"

# install dependencies
# Needed for shippable:
#    git sudo
# Needed to build RPM:
#    rpm-build
# Needed to run:
#    python34 python34-libs python34-bottle python34-requests python34-mysql python34-typing
#    openssl openssh-clients crontabs
# Needed for tests:
#     python34-PyYAML python34-pip gromacs
#     pip install pylint coverage pytest pytest-cov pytest-dependency
#
RUN \
    yum -y update && \
    yum -y install --setopt=tsflags=nodocs \
        git sudo \
        python34 python34-libs python34-bottle python34-requests python34-mysql python34-typing openssl openssh-clients crontabs\
        python34-PyYAML python34-pip gromacs \
        rpm-build && \
    yum clean all


RUN \
    pip3 install --upgrade pip && \
    pip3 install pylint coverage pytest pytest-cov pytest-dependency

# reset entry point
ENTRYPOINT []
CMD []
