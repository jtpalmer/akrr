then
    echo "ARR:ERROR: App kernel launcher is not executable (/user/xdtas/u2/edge_appker/lammps/run)"
fi

#Test that all directories are writable
testDirWritability "$ARR_TASK_WORKDIR" "Task working directory"
testDirWritability "$ARR_NETWORK_SCRATCH" "Network scratch directory"
testDirWritability "$ARR_LOCAL_SCRATCH" "local scratch directory"

#Write down some info, JSON-Like object
echo "\"startTime\":\""`date`"\"," > gen.info
echo "\"nodeList\":\"\"\""$ARR_NODELIST\"\"\""," >> gen.info




